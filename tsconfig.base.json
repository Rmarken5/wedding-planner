{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@marken-shop-react/not-found/page/not-found": [
        "libs/not-found/page/not-found/src/index.ts"
      ],
      "@marken-shop-react/protected-route/shared": [
        "libs/protected-route/shared/src/index.ts"
      ],
      "@marken-shop-react/sign-in/feature/sign-in": [
        "libs/sign-in/feature/sign-in/src/index.ts"
      ],
      "@marken-shop-react/sign-in/page/sign-in": [
        "libs/sign-in/page/sign-in/src/index.ts"
      ],
      "@marken-shop-react/sign-in/ui/sign-in-form": [
        "libs/sign-in/ui/sign-in-form/src/index.ts"
      ],
      "@marken-shop-react/theme/page/theme": [
        "libs/theme/page/theme/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
